{% extends 'base.html' %}
{% load crispy_forms_tags %}
{% block title %}
Edit your User Information
{% endblock title %}

{% block content %}
<div id="glean-index-header">
    <h1 class="pull-left">{{object.user.username}}'s Details</h1>
</div>

<div class="glean-index-red red">
    <h3>Your Details</h3>
    <p>Change them if you need to. Just be sure to double check your spelling.</p>
</div>
{% if messages %}
<div class="glean-index-red red">
{% for message in messages %}
		<h3>{{message}}</h3>
{% endfor %}
</div>
{% endif %}
<div class="form-errors">
{{form.errors}}
</div>
<div style="width:600px; float:left" class="2col">
  {% crispy form %}
</div>
<div>

</div>
<style>
.add-on {
    background-color: transparent !important;
    border: none !important;
}
.row {
    margin-left: 0px !important;
  }
</style>
{% endblock content %}